time = int(input("Introduceti numarul de secunde: "))
hours = time//3600
minutes = time//60-hours*60
seconds = time % 60
print(f"{hours:02}:{minutes:02}:{seconds}")
seconds1 = time % 60
minutes1 = (time//60)%60
hours1 = int((time-seconds1-minutes1*60)/3600)
print(f"{hours1:02}:{minutes1:02}:{seconds1}")
